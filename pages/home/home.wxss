.myApp {
  padding: 0 10px;
}

.header {
  display: flex;
  padding: 20px;
}
.header image{
  width: 20px;
  position: absolute;
  top: -80px;
  left: 80px;
}
.header input {
  height: 80rpx;
  width: 300px;
}

.place-holder{
  text-align: center;
  font-size: 15px;
}
.header input:nth-of-type(1) {
  background-color: rgb(239, 239, 239);
  border-radius: 50rpx 0 0 50rpx;
}

.header input:nth-of-type(2) {
  text-align: center;
  flex-shrink: 3;
  border-radius: 0 50rpx 50rpx 0;
  background-color: rgb(224, 224, 224);
}

.hotsearch {
  text-align: center;
}

.hotTitle {
  font-size: 22px;
  font-weight: bold;
}

.choose {
  display: flex;
  flex-wrap: wrap;
  color: #e66d0a;
  /* justify-content: space-around */
}

.item-food {
  font-size: 15px;
  padding: 8px 15px;
  border: 2px solid #e66d0a;
  margin-top: 15px;
  margin-left: 15px;
  border-radius: 20px;
  /* outline: 1px solid rebeccapurple */
}

.selected {
  text-align: center;
}

.selectedTitle {
  font-size: 22px;
  font-weight: bold;
  padding: 15px;
}

.store {
  text-align: left;
  padding: 10px 17px;
}

.storeIntro {
  font-size: 20px;
  font-weight: bold;
}
.storeTitle{
  font-size: 14px;
  padding: 10px 0;
  color: gray;
  display: flex;
  justify-content: space-between
}
.myRecord{
  display: flex;
}
.test{
  display: flex;
  align-content: center
}
.myRecord text{
  padding-right:8px;
  margin-bottom: -10px;
}
.myRecord image{
  width: 20px;
  height: 100%;
}
.foodBox{
  position: relative;
  padding: 10px 0;
}
.foodBox image{
  height: 200px;
  border-radius: 3px;
}
.myIntro{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 70%;
  color: white;
  line-height: 28px
}
.foodIntro{
  text-align: center;
  font-weight: bold;
}
.sumFood{
  text-align: center;
  font-size: 14px;
  margin-top: 10px
}