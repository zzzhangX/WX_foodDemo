.header image {
  width: 100%;
  height: 300px;
}

.title {
  text-align: center;
  font-size: 22px;
  font-weight: bold;
  padding: 20px 0 15px 0;
}

.looksman {
  text-align: center;
  font-size: 14px;
  color: gray;
  font-weight: lighter;
  padding: 5px 0 20px 0;
}

.intro {
  font-size: 17px;
  line-height: 30px;
  padding: 0 20px 20px 20px;
}

.writeby {
  font-size: 16px;
  padding-bottom: 15px;
}
.writeby{
  margin-left: 20px
}
.foodmenu {
  padding: 0 20px;
}

.heading {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  padding: 20px 0;
}

.item {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid rgb(211, 202, 202);
}
.step{
  margin-bottom: 50px
}
.stepitem {
  padding: 10px 27px;
}

.stepitem image {
  margin: 0 auto;
}

.stepitem text:nth-of-type(1) {
  font-weight: bold;
}

.stepitem text:nth-of-type(2) {
  font-size: 17px;
  line-height: 30px;
}

.fixed {
  position: fixed;
  background-color: rgb(75, 71, 71);
  left: 0;
  bottom: 0;
  width: 100%;
  color: white;
  height: 50px;
}

.fixed view {
  float: left;
  width: 33.3%;
  text-align: center;
  font-size: 16px;
  margin-top: 13px;
}

.fixed image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
  vertical-align: middle
}
.fixed text{
  margin-top: 2px
}
